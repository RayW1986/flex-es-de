		<!-- GAME DESCRIPTION -->
		<image name="bar2">
			<pos>.025 .38</pos>
			<size>.45 .001</size>
			<path>${rootpath}/_inc/images/background.png</path>
			<color>${selectorColor}</color>
			<colorEnd>${backgroundColor}</colorEnd>
		</image>
		<text name="gameDescription">
			<pos>.025 .39</pos>
